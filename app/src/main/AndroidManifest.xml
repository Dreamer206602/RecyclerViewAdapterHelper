        </activity>
        <activity android:name=".AnimationActivity">
        </activity>
        <activity android:name=".EmptyViewActivity">
        </activity>
        <activity android:name=".HeaderAndFooterActivity">
        </activity>
        <activity android:name=".MultipleItemUseActivity">
        </activity>
        <activity android:name=".PullToRefreshActivity">
        </activity>
        <activity android:name=".SectionUseActivity">
        </activity>
    </application>

</manifest>